@model List<ShowUserModel>
@{
    ViewBag.Title = "Show Users";
    ViewBag.PageHeader = "Show Users";
    ViewBag.PageHeaderSmall = "Displays all the subscription user in tabular form";
}
@section css{
    <link href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}
<section class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Click on column name to sort by that column. Use search box to search the specific user</h3>
        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table id="user-table" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>User ID</th>
                            <th>Login User Name</th>
                            <th>Full Name</th>
                            <th>Subscription Type</th>
                            <th>Address</th>
                            <th>Contact No.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.No</td>
                                <td>@user.UserId</td>
                                <td>@user.LogInUserName</td>
                                <td>@user.FullName</td>
                                <td>@user.SubscriptionType</td>
                                <td>@user.Address</td>
                                <td>@user.ContactNo</td>
                            </tr>
                        }
                    <tfoot>
                        <tr>
                            <th>No.</th>
                            <th>User ID</th>
                            <th>Login User Name</th>
                            <th>Full Name</th>
                            <th>Subscription Type</th>
                            <th>Address</th>
                            <th>Contact No.</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>
    <script>
      $(function () {
          $("#user-table").DataTable({
              "paging": false
          });
      });
    </script>
}