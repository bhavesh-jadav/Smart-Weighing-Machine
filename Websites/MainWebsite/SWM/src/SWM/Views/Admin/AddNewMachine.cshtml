@model AddNewMachineModel
@{
    ViewBag.Title = "Add New Machine";
    ViewBag.PageHeader = "Add New Machine";
    ViewBag.PageHeaderSmall = "Add new weighing machine information";
}
<section class="content">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Add new machine info</h3>
            </div>
            <form method="post" action="/AddNewMachine">
                <div class="box-body">
                    <div class="form-group">
                        <label>Machine ID: 755412564 (automatically generated)</label>
                    </div>
                    <div class="form-group">
                        <label>Manufacture date: </label>
                        <input asp-for="ManufacutreDate" type="datetime" class="form-control" id="datepicker" placeholder="Enter manufacture date" />
                        <span asp-validation-for="ManufacutreDate"></span>
                    </div>
                    <div class="form-group">
                        <label>Manufacture location: </label>
                        <input asp-for="ManufactureLocation" type="text" class="form-control" placeholder="Enter manufacture location" />
                        <span asp-validation-for="ManufactureLocation"></span>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </form>
        </div>
    </div>
</section>
@section script{
    <script>
        $('#datepicker').datepicker({
            autoclose: true,
            format: "dd/mm/yyyy"
        });</script>
}