@model RemoveUserModel
@{
    ViewBag.Title = "Remove User";
    ViewBag.PageHeader = "Remove User";
    ViewBag.PageHeaderSmall = "Remove subscription user from the system";
}
<section class="content">
    <form method="post">
        <div class="box box-success">
            <div style="color:#dd4b39;font-size:20px;margin-top:20px;" asp-validation-summary="ModelOnly"></div>
            @if (ViewBag.SuccessMessage != null)
            {
                <h3 style="color:green;margin-left:10px;">@ViewBag.SuccessMessage</h3>
            }
            <div class="box-body">
                <div class="form-group">
                    <label>User ID:</label>
                    <input asp-for="UserId" class="form-control" type="text" value="" placeholder="Enter user ID" />
                    <span asp-validation-for="UserId"></span>
                </div>
                <div class="form-group">
                    <label>User name:</label>
                    <input asp-for="UserName" type="text" value="" placeholder="Enter user name" class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-success">Remove</button>
            </div>
        </div>
    </form>
</section>
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}

